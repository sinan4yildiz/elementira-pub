{
   "name": "elementira",
   "version": "1.0.0",
   "private": true,
   "author": "Sinan Yildiz",
   "license": "ISC",
   "scripts": {
      "prod": "npm run build && npm run pm2:app && npm run pm2:cron",
      "local": "NODE_OPTIONS='--inspect' ts-node server.ts",
      "start": "NODE_ENV=production ts-node server.ts",
      "pm2:app": "pm2 startOrRestart pm2.config.js --only elementira-app",
      "pm2:cron": "pm2 startOrRestart pm2.config.js --only elementira-cron",
      "build": "next build",
      "cypress:open": "cypress open",
      "cypress:run": "cypress run",
      "format": "prettier --write .",
      "lint": "next lint",
      "clean": "rimraf \"{.next,dist,build,out,node_modules,tsconfig.tsbuildinfo,package-lock.json}\""
   },
   "lint-staged": {
      "**/*.{js,ts,tsx}": [
         "npm run format",
         "npx eslint --fix"
      ]
   },
   "dependencies": {
      "@headlessui/react": "^1.7.7",
      "@next/font": "^13.0.2",
      "@splidejs/react-splide": "^0.7.12",
      "axios": "^1.4.0",
      "bcrypt": "^5.1.0",
      "cron": "^2.3.1",
      "dotenv": "^16.0.3",
      "js-cookie": "^3.0.1",
      "mongoose": "^6.9.0",
      "next": "^13.1.0",
      "next-auth": "^4.19.0",
      "node-html-parser": "^6.1.4",
      "nodemailer": "^6.9.1",
      "react": "^18.2.0",
      "react-device-detect": "^2.2.3",
      "react-dom": "^18.2.0",
      "sharp": "^0.32.1",
      "validator": "^13.7.0",
      "wavesurfer.js": "^6.4.0"
   },
   "devDependencies": {
      "@svgr/webpack": "^6.5.1",
      "@tailwindcss/aspect-ratio": "^0.4.2",
      "@tailwindcss/container-queries": "^0.1.0",
      "@tailwindcss/forms": "^0.5.3",
      "@tailwindcss/line-clamp": "^0.4.2",
      "@tailwindcss/typography": "^0.5.8",
      "@types/cron": "^2.0.1",
      "@types/js-cookie": "^3.0.3",
      "@types/node": "18.7.14",
      "@types/nodemailer": "^6.4.7",
      "@types/react": "18.0.18",
      "@types/react-dom": "18.0.6",
      "@types/validator": "^13.7.11",
      "@types/wavesurfer.js": "^6.0.3",
      "autoprefixer": "^10.4.13",
      "cypress": "^12.13.0",
      "eslint": "8.35.0",
      "eslint-config-next": "13.2.1",
      "eslint-config-prettier": "^8.8.0",
      "husky": "^8.0.3",
      "lint-staged": "^13.2.2",
      "mochawesome": "^7.1.3",
      "postcss": "^8.4.20",
      "prettier": "2.8.8",
      "prettier-plugin-tailwindcss": "^0.3.0",
      "sass": "^1.57.1",
      "stylelint": "^15.6.2",
      "stylelint-config-recommended-scss": "^12.0.0",
      "stylelint-config-tailwindcss": "^0.0.7",
      "stylelint-order": "^6.0.3",
      "stylelint-scss": "^5.0.0",
      "tailwindcss": "^3.2.4",
      "ts-node": "^10.9.1",
      "tsconfig-paths": "^4.2.0",
      "typescript": "4.8.2"
   }
}
